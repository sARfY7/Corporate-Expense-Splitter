<%- include("includes/common-head"); -%>
<title>Add Expense</title>
</head>
  <body>
    <%- include("includes/nav"); -%>
    <div class="wrapper">
      <h1>Add Expense</h1>
      <div class="form-container">
          <form action="/expense" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Expense Name</label>
                    <input type="text" name="exp_name" onchange="addEmpFields(this)" placeholder="Enter Expense Name" />
                </div>
                <div class="emp">
                    <div class="form-group">
                        <label for="">No. of Employees</label>
                        <input type="number" name="exp_dividedInto" onchange="addEmpFields(this)" placeholder="Enter No. of Employees" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Amount</label>
                    <input type="text" name="exp_amount" placeholder="Enter Amount" />
                </div>
                <div class="form-group">
                    <label for="">Expense Proof</label>
                    <input type="file" name="exp_proof" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" />
                </div>
          </form>
          <% if (message) { %>
          <div class="msg">
              <%= message %>
          </div>
          <% } %>
      </div>
    </div>

    <script src="/js/main.js"></script>
  </body>
</html>
